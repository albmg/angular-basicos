      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "/usr/bin/chromium-browser",
      "runtimeArgs": [
        "--new-window",
        "-user-data-dir=\"/${workspaceFolder}/DevProfile\"",
        "--remote-debugging-port=9222",
        "--disable-background-networking"
      ]
    }
  ]
